rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAuthed() { return request.auth != null; }
    function tenant() { return request.auth.token.tenantId; }

    match /tenants/{tenantId}/files/{fileId} {
      allow read: if isAuthed() && tenant() == tenantId;
      allow write: if isAuthed() && tenant() == tenantId;
    }
  }
}
